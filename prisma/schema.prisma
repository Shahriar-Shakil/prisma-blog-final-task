generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int    @id @default(autoincrement())
  firstName String @db.VarChar(50)
  lastName  String @db.VarChar(50)
  email     String @unique @db.VarChar(50)
  password  String @db.VarChar(50)
  mobile String
  otp        String       @db.VarChar(10) @default("0")
  createAt DateTime @default(now()) @db.Timestamp(0)
  updateAt DateTime @default(now()) @updatedAt @db.Timestamp(0)

  blogs blog[]
}

model blog{
  id        Int    @id @default(autoincrement())
  title String @db.VarChar(50)
  metaTitle String @db.VarChar(50)
  slug String @unique @db.VarChar(50)
  summary String @db.VarChar(275)
  published Boolean @default(false)
  content String @db.VarChar(2000)
  authorId Int 
  author users @relation(fields: [authorId],references: [id],onDelete: Cascade,onUpdate: Cascade)
  createAt DateTime @default(now()) @db.Timestamp(0)
  updateAt DateTime @default(now()) @updatedAt @db.Timestamp(0)
}